<h1>Carrinhos</h1>
<%= link_to 'Novo Carrinho', new_cart_path, class: 'btn btn-primary mb-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.customer.name %></td>
        <td><%= link_to 'Mostrar', cart, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Editar', edit_cart_path(cart), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', cart, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>