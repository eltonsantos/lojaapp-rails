<h1>Lojas</h1>
<%= link_to 'Nova Loja', new_store_path, class: 'btn btn-primary mb-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Endereço</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.description %></td>
        <td><%= store.address %></td>
        <td><%= link_to 'Mostrar', store, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Editar', edit_store_path(store), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', store, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>