<h1>Itens</h1>
<%= link_to 'Novo Item', new_item_path, class: 'btn btn-primary mb-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Quantidade em Estoque</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= item.stock_quantity %></td>
        <td><%= link_to 'Mostrar', item, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Editar', edit_item_path(item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', item, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>