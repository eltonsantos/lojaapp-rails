<h1>Pedidos</h1>
<%= link_to 'Novo Pedido', new_order_path, class: 'btn btn-primary mb-3' %>
<table class="table">
  <thead>
    <tr>
      <th>Data</th>
      <th>Total</th>
      <th>Status</th>
      <th>Cliente</th>
      <th>Loja</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= number_to_currency(order.total) %></td>
        <td><%= order.status %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.store.name %></td>
        <td><%= link_to 'Mostrar', order, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Editar', edit_order_path(order), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Excluir', order, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>